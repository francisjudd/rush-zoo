{
  "name": "nft-web-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "build:ci": "pnpm build && pnpm export",
    "start": "next start",
    "start:dev": "firebase serve --only hosting --host 0.0.0.0",
    "lint": "npm-run-all -p lint:style:css lint:style:scss lint:code -s format:check",
    "lint:style:css": "stylelint --fix **/*.css --allow-empty-input",
    "lint:style:scss": "stylelint --syntax=scss --fix **/*.scss --allow-empty-input",
    "lint:code": "eslint --ext .js,.ts,.jsx,.tsx --fix .",
    "format:check": "prettier --check --ignore-unknown .",
    "format:write": "prettier --write --ignore-unknown .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@firebase/app-types": "^0.7.0",
    "@solana/web3.js": "^1.27.0",
    "aos": "^2.3.4",
    "autoprefixer": "^10.3.4",
    "firebase": "^8.0.2",
    "firebase-admin": "^9.11.1",
    "next": "^11.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^3.0.4",
    "react-firebaseui": "^5.0.2",
    "react-iframe": "^1.8.0",
    "react-ssr-prepass": "^1.2.0",
    "tailwindcss": "^2.2.15",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0",
    "@types/aos": "^3.0.4",
    "@types/react": "^17.0.20",
    "eslint": "^7.32.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "prettier": "^2.4.0",
    "sass": "^1.39.2",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^22.0.0",
    "typescript": "^4.4.3"
  }
}
